{
  "name": "phenixflow",
  "version": "0.1.0",
  "private": true,
  "description": "Backend service scaffold for Project phoenixflow",
  "main": "src/server.js",
  "type": "commonjs",
  "scripts": {
    "start": "node src/server.js",
    "test": "npm run test:api && npm run test:core",
    "test:api": "vitest run --config vitest.api.config.js",
    "test:core": "vitest run --config vitest.core.config.js",
    "test:watch": "vitest --config vitest.api.config.js",
    "test:ci": "npm run test:api -- --reporter=dot && npm run test:core -- --reporter=dot",
    "lint": "eslint ."
  },
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "devDependencies": {
    "better-sqlite3": "^11.7.2",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "supertest": "^7.0.0",
    "vitest": "^3.0.5"
  }
}
